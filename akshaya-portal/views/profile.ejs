<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.0/flowbite.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-100 p-6">
    <div class="max-w-xl mx-auto bg-white p-6 rounded-lg shadow-lg">
      <h2 class="text-2xl font-bold text-gray-800 mb-4">User Profile</h2>

      <!-- User Profile Form -->
      <form id="profileForm" class="space-y-4">
        <div>
          <label class="block text-gray-700">Email</label>
          <input type="email" id="email" class="w-full px-3 py-2 border
          rounded-lg" value="<%= user?.email  %>" disabled>
        </div>

        <div>
          <label class="block text-gray-700">Shop Name</label>
          <input
            type="text"
            id="shopName"
            class="w-full px-3 py-2 border rounded-lg"
            value="<%= user?.shopName || 'Not Available' %>"
            disabled
          />
        </div>

        <div>
          <label class="block text-gray-700">Person Name</label>
          <input
            type="text"
            id="personName"
            class="w-full px-3 py-2 border rounded-lg"
            value="<%= user?.personName || 'Not Available' %>"
            disabled
          />
        </div>

        <div>
          <label class="block text-gray-700">Center ID</label>
          <input
            type="text"
            id="centerId"
            class="w-full px-3 py-2 border rounded-lg"
            value="<%= user?.centerId || 'Not Available' %>"
            disabled
          />
        </div>

        <div>
          <label class="block text-gray-700">Phone Number</label>
          <input
            type="text"
            id="phone"
            class="w-full px-3 py-2 border rounded-lg"
            value="<%= user?.phone|| 'Not Available' %>"
            disabled
          />
        </div>

        <div>
          <label class="block text-gray-700">District</label>
          <input
            type="text"
            id="district"
            class="w-full px-3 py-2 border rounded-lg"
            value="<%= user?.district || 'Not Available' %>"
            disabled
          />
        </div>

        <div>
         
        
        <div>
          <b><p class="block text-gray-700">Address</p></b>
          </div>
          <div>
            <label class="block text-gray-700">Building/House Name</label>
            <input
              type="text"
              id="buildingName"
              class="w-full px-3 py-2 border rounded-lg"
              value="<%= user?.address?.buildingName || 'Not Available' %>"
              
            />
          </div>
          
          <div>
            <label class="block text-gray-700">Street</label>
            <input
              type="text"
              id="street"
              class="w-full px-3 py-2 border rounded-lg"
              value="<%= user?.address?.street || 'Not Available' %>"
              
            />
          </div>
          
          <div>
            <label class="block text-gray-700">Locality</label>
            <input
              type="text"
              id="locality"
              class="w-full px-3 py-2 border rounded-lg"
              value="<%= user?.address?.locality || 'Not Available' %>"
            
            />
          </div>
          
          <div>
            <label class="block text-gray-700">Pincode</label>
            <input
              type="text"
              id="pincode"
              class="w-full px-3 py-2 border rounded-lg"
              value="<%= user?.address?.pincode || 'Not Available' %>"
              
            />
          </div>
          <div>
            <form action="/update-services" method="POST">
              <label class="block text-black-700">Services Available Online</label>
              <div class="flex flex-col mt-2">
                <% for (let service in user.services) { %>
                    <label class="inline-flex items-center">
                        <input type="checkbox" name="services[<%= service %>]" value="true" class="mr-2"
                            <%= user.services[service] ? "checked" : "" %>>
                            <%= service.replace('_', ' ').split(' ').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ') %>
                    </label>
                <% } %>
              </div>
            
              <button type="submit" class="bg-blue-500 text-white px-4 py-2 mt-4">Save</button>
          </form>
          
         
            </div>
          </div>
          

        <!-- Edit & Save Buttons -->
        <div class="flex justify-between">
          <button
            type="button"
            id="editBtn"
            class="px-4 py-2 bg-blue-500 text-white rounded-lg"
          >
            Edit
          </button>
          <button
            type="submit"
            id="saveBtn"
            class="px-4 py-2 bg-green-500 text-white rounded-lg hidden">
          
            Save
          </button>
        </div>
        
      </form>
    </div>

    <script>

      console.log("<%= user.services %>");
      const editBtn = document.getElementById("editBtn");
      const saveBtn = document.getElementById("saveBtn");
      const emailInput = document.getElementById("email");
      const phoneNumberInput = document.getElementById("phone");
      const businessCategoryInputs = document.querySelectorAll("input[name='businessCategory']");
      const checkboxes = document.querySelectorAll("input[name='services']");
    
      // Newly added fields
      const buildingInput = document.getElementById("buildingName");
      const streetInput = document.getElementById("street");
      const localityInput = document.getElementById("locality");
      const pincodeInput = document.getElementById("pincode");
    
      editBtn.addEventListener("click", () => {
        emailInput.disabled = false;
        phoneNumberInput.disabled = false;
        buildingInput.disabled = false;
        streetInput.disabled = false;
        localityInput.disabled = false;
        pincodeInput.disabled = false;
    
        businessCategoryInputs.forEach(input => input.disabled = false);
        checkboxes.forEach(checkbox => checkbox.disabled = false);
    
        editBtn.classList.add("hidden");
        saveBtn.classList.remove("hidden");
      });
    
      document.getElementById("profileForm").addEventListener("submit", async (e) => {
        e.preventDefault();
    
        const newEmail = emailInput.value;
        const newPhoneNumber = phoneNumberInput.value;
        const newBuilding = buildingInput.value;
        const newStreet = streetInput.value;
        const newLocality = localityInput.value;
        const newPincode = pincodeInput.value;
    
        const selectedBusinessCategory = [...businessCategoryInputs].find(input => input.checked)?.value;
    
        try {
          const response = await fetch("/profile/update", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
              email: newEmail,
              phoneNumber: newPhoneNumber,
              buildingName: newBuilding,
              street: newStreet,
              locality: newLocality,
              pincode: newPincode,
              businessCategory: selectedBusinessCategory
            }),
          });
    
          if (!response.ok) throw new Error("Failed to update profile.");
    
          alert("Profile updated successfully!");
    
          emailInput.disabled = true;
          phoneNumberInput.disabled = true;
          buildingInput.disabled = true;
          streetInput.disabled = true;
          localityInput.disabled = true;
          pincodeInput.disabled = true;
    
          businessCategoryInputs.forEach(input => input.disabled = true);
          checkboxes.forEach(checkbox => checkbox.disabled = true);
    
          editBtn.classList.remove("hidden");
          saveBtn.classList.add("hidden");
        } catch (error) {
          alert(error.message);
        }
      });
    </script>
    
  </body>
</html>
