<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Customer Details - Service Saathi</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.0/flowbite.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/daisyui@5" rel="stylesheet" type="text/css" />
  <script src="/js/tailwindConfig.js"></script>
  <script src="/js/profileIcon.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
</head>
<body class="bg-bg-light text-gray-800 transition-all duration-300">
  <!-- Sidebar -->
  <aside class="fixed top-0 left-0 h-screen w-56 bg-gradient-to-b from-primary to-secondary shadow-md z-50">
    <div class="flex flex-col justify-between h-full">
      <div class="p-6">
        <h1 class="text-2xl font-bold text-white">Service Saathi</h1>
      </div>
      <nav class="flex-1 px-4">
        <ul class="space-y-3">
          <!-- Home and Service links here -->
        </ul>
      </nav>
    </div>
  </aside>

  <!-- Top Navbar -->
  <nav class="fixed top-0 left-56 right-0 bg-base-100 shadow-md py-2.5 px-6 flex justify-between items-center z-40">
    <h2 class="text-xl font-semibold text-gray-700">Customer Details</h2>
    <div class="flex items-center space-x-4">
      <!-- Profile dropdown here -->
    </div>
  </nav>

  <!-- Main Content -->
  <div class="flex ml-56 pt-20 bg-bg-light min-h-screen">
    <div class="container mx-auto p-6">
      <div class="max-w-4xl mx-auto bg-white shadow-md rounded-md p-6">
        <!-- Customer Details Section -->
        <h2 class="text-3xl font-bold text-gray-800 mb-4"><%= customerName || "Customer Name" %></h2>
        <div class="bg-gray-200 p-4 rounded-md mb-6">
          <!-- Personal info fields -->
          <p class="text-lg flex justify-between items-center">
            <strong>Mobile:</strong> <span id="mobileVal"><%= mobile || "Mobile Number" %></span>
            <button onclick="copyToClipboard(document.getElementById('mobileVal').textContent)" class="text-gray-600 hover:text-blue-500">
              <!-- copy icon -->
            </button>
          </p>
          <p class="text-lg flex justify-between items-center mt-2">
            <strong>Email:</strong> <span id="emailVal"><%= email || "Email Address" %></span>
            <button onclick="copyToClipboard(document.getElementById('emailVal').textContent)" class="text-gray-600 hover:text-blue-500">
              <!-- copy icon -->
            </button>
          </p>
          <p class="text-lg flex justify-between items-center mt-2">
            <strong>Address:</strong> <span id="addressVal"><%= address || "Customer Address" %></span>
            <button onclick="copyToClipboard(document.getElementById('addressVal').textContent)" class="text-gray-600 hover:text-blue-500">
              <!-- copy icon -->
            </button>
          </p>
          <p class="text-lg flex justify-between items-center mt-2">
            <strong>Date of Birth:</strong> <span id="dobVal"><%= dob || "Date of Birth" %></span>
            <button onclick="copyToClipboard(document.getElementById('dobVal').textContent)" class="text-gray-600 hover:text-blue-500">
              <!-- copy icon -->
            </button>
          </p>
        </div>

        <!-- Uploaded Documents Table -->
        <h2 class="text-2xl font-semibold text-gray-800 mb-4">Uploaded Documents & Extracted Data</h2>
        <table class="w-full border-collapse border border-gray-300 mb-6">
          <thead>
            <tr class="bg-gray-100">
              <th class="border border-gray-300 p-2">Document Name</th>
              <th class="border border-gray-300 p-2">Extracted Data</th>
              <th class="border border-gray-300 p-2">View</th>
              <th class="border border-gray-300 p-2">Download</th>
            </tr>
          </thead>
          <tbody>
            <% if (!serviceRequest || serviceRequest.requiredDocuments.length === 0) { %>
              <tr><td colspan="4" class="text-center p-4">No documents uploaded.</td></tr>
            <% } else { %>
              <% serviceRequest.requiredDocuments.forEach(function(doc){ %>
                <tr class="hover:bg-gray-50 align-top">
                  <td class="border p-2 text-center"><%= doc.name %></td>
                  <td class="border p-2">
                    <% const extracted = doc.fileData ? JSON.parse(doc.fileData) : {}; %>
                    <% if (Object.keys(extracted).length) { %>
                      <ul class="list-disc pl-5 text-left">
                        <% Object.entries(extracted).forEach(function([key,val]){ %>
                          <li><strong><%= key %>:</strong> <%= val %></li>
                        <% }); %>
                      </ul>
                    <% } else { %>
                      <span class="text-yellow-600">Pending extraction</span>
                    <% } %>
                  </td>
                  <td class="border p-2 text-center">
                    <% if (doc.uploadedFile) { %>
                      <a href="<%= doc.uploadedFile %>" target="_blank" class="text-blue-500 hover:text-blue-700">View</a>
                    <% } else { %><span>-</span><% } %>
                  </td>
                  <td class="border p-2 text-center">
                    <% if (doc.uploadedFile) { %>
                      <a href="<%= doc.uploadedFile %>" download class="text-blue-500 hover:text-blue-700">Download</a>
                    <% } else { %><span>-</span><% } %>
                  </td>
                </tr>
              <% }); %>
            <% } %>
          </tbody>
        </table>

        <!-- Application Status Section (unchanged) -->
      </div>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.0/flowbite.min.js"></script>
  <script>
    function copyToClipboard(text){ navigator.clipboard.writeText(text); alert("Copied: " + text); }
    async function updateStatus(newStatus){ /* existing */ }
  </script>
</body>
</html>