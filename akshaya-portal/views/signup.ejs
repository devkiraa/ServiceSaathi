<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Service Saathi Sign Up</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    // Step 1: Validate Mobile Number
    function validateStep1() {
      const phone = document.getElementById("phone");
      const phoneError = document.getElementById("phone-error");
      const phonePattern = /^[6789][0-9]{9}$/;
      phoneError.textContent = "";
      
      if (!phonePattern.test(phone.value)) {
        phoneError.textContent = "Phone number must start with 9, 8, 7, or 6 and be 10 digits long.";
        return;
      }
      // If valid, proceed to Step 2
      document.getElementById("step1").classList.add("hidden");
      document.getElementById("step2").classList.remove("hidden");
    }
    
    // Step 2: Validate other details
    function validateStep2() {
      const email = document.getElementById("email");
      const shopName = document.getElementById("shopName");
      const personName = document.getElementById("personName");
      const password = document.getElementById("password");
      const confirmPassword = document.getElementById("confirm-password");
      const emailError = document.getElementById("email-error");
      const passwordError = document.getElementById("password-error");
      const confirmPasswordError = document.getElementById("confirm-password-error");

      const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      emailError.textContent = "";
      passwordError.textContent = "";
      confirmPasswordError.textContent = "";

      let isValid = true;

      if (!emailPattern.test(email.value)) {
        emailError.textContent = "Please enter a valid email address.";
        isValid = false;
      }
      if (password.value.length < 6) {
        passwordError.textContent = "Password must be at least 6 characters long.";
        isValid = false;
      }
      if (password.value !== confirmPassword.value) {
        confirmPasswordError.textContent = "Passwords do not match.";
        isValid = false;
      }
      return isValid;
    }

    // On form submission, validate Step 2 and send data to /api/signup
    document.addEventListener('DOMContentLoaded', function() {
      document.getElementById('signupForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        if (!validateStep2()) {
          return;
        }
        // Gather all form data
        const formData = new FormData(e.target);
        const data = Object.fromEntries(formData);
        
        try {
          const response = await fetch('/api/signup', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
          });
          const result = await response.json();
          if (response.ok) {
            // Show the signup success modal
            document.getElementById("successModal").style.display = "flex";
          } else {
            alert('Signup failed: ' + result.error);
          }
        } catch (err) {
          console.error(err);
          alert('An error occurred during signup.');
        }
      });
    });
  </script>
  <style>
    /* Modal Background */
    .modal {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: rgba(0, 0, 0, 0.5);
      justify-content: center;
      align-items: center;
      z-index: 999;
    }
    /* Modal Content */
    .modal-content {
      background-color: white;
      padding: 20px;
      border-radius: 8px;
      text-align: center;
    }
  </style>
</head>
<body class="bg-gray-100 flex justify-center items-center h-screen">
  <div class="bg-white shadow-md rounded-md p-8 w-96">
    <h2 class="text-2xl font-bold text-center mb-6">Service Saathi Sign Up</h2>
    <form id="signupForm">
      <!-- Step 1: Mobile Number Only -->
      <div id="step1">
        <div class="mb-4">
          <label for="phone" class="block text-gray-700 font-medium">Mobile Number</label>
          <input type="text" id="phone" name="phone" class="w-full p-2 border border-gray-300 rounded mt-1 focus:outline-none focus:ring-2 focus:ring-gray-400" required>
          <p id="phone-error" class="text-red-500 text-sm"></p>
        </div>
        <button type="button" onclick="validateStep1()" class="w-full bg-gray-800 text-white p-2 rounded hover:bg-gray-700">Continue</button>
      </div>

      <!-- Step 2: Centre Details -->
      <div id="step2" class="hidden">
        <div class="mb-4">
          <label for="shopName" class="block text-gray-700 font-medium">Shop Name</label>
          <input type="text" id="shopName" name="shopName" class="w-full p-2 border border-gray-300 rounded mt-1 focus:outline-none focus:ring-2 focus:ring-gray-400" required>
        </div>
        <div class="mb-4">
          <label for="personName" class="block text-gray-700 font-medium">Person Name</label>
          <input type="text" id="personName" name="personName" class="w-full p-2 border border-gray-300 rounded mt-1 focus:outline-none focus:ring-2 focus:ring-gray-400" required>
        </div>
        <div class="mb-4">
          <label for="email" class="block text-gray-700 font-medium">Email</label>
          <input type="email" id="email" name="email" class="w-full p-2 border border-gray-300 rounded mt-1 focus:outline-none focus:ring-2 focus:ring-gray-400" required>
          <p id="email-error" class="text-red-500 text-sm"></p>
        </div>
        <div class="mb-4">
          <label for="password" class="block text-gray-700 font-medium">Password</label>
          <input type="password" id="password" name="password" class="w-full p-2 border border-gray-300 rounded mt-1 focus:outline-none focus:ring-2 focus:ring-gray-400" required>
          <p id="password-error" class="text-red-500 text-sm"></p>
        </div>
        <div class="mb-6">
          <label for="confirm-password" class="block text-gray-700 font-medium">Confirm Password</label>
          <input type="password" id="confirm-password" name="confirmPassword" class="w-full p-2 border border-gray-300 rounded mt-1 focus:outline-none focus:ring-2 focus:ring-gray-400" required>
          <p id="confirm-password-error" class="text-red-500 text-sm"></p>
        </div>
        <div class="mb-4">
          <label class="block text-gray-700 font-medium">Select Centre Type</label>
          <div class="flex items-center mt-2">
            <input type="radio" id="csc" name="type" value="csc" class="mr-2" required>
            <label for="csc" class="text-gray-700">CSC</label>
          </div>
          <div class="flex items-center mt-2">
            <input type="radio" id="akshaya" name="type" value="akshaya" class="mr-2" required>
            <label for="akshaya" class="text-gray-700">Akshaya Center</label>
          </div>
        </div>
        <div class="mb-4">
          <label for="center-id" class="block text-gray-700 font-medium">Center ID</label>
          <input type="text" id="center-id" name="centerId" class="w-full p-2 border border-gray-300 rounded mt-1 focus:outline-none focus:ring-2 focus:ring-gray-400" required>
        </div>
        <button type="submit" class="w-full bg-gray-800 text-white p-2 rounded hover:bg-gray-700">Sign Up</button>
      </div>
    </form>
  </div>

  <!-- Success Modal -->
  <div id="successModal" class="modal">
    <div class="modal-content">
      <h3 class="text-xl font-bold mb-4">Signup Successful</h3>
      <p>You have successfully signed up. Please log in to continue.</p>
      <button id="okButton" class="mt-4 bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600">OK</button>
    </div>
  </div>

  <script>
    // Handle OK button click to navigate back to the login page
    document.getElementById("okButton").addEventListener("click", function() {
      window.location.href = '/'; // Redirect to login page
    });
  </script>
</body>
</html>
