<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/css/style.css?v=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Service Sathi</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link <%= req.path === '/' ? 'active' : '' %>" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= req.path === '/settings' ? 'active' : '' %>" href="/settings">Settings</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= req.path === '/documents' ? 'active' : '' %>" href="/documents">Documents</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= req.path === '/payment-details' ? 'active' : '' %>" href="/payment-details">Payment Details</a>
                    </li>
                    <li class="nav-item ms-auto">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        <h1 class="mb-4">Welcome to Service Sathi Dashboard</h1>
        
        <!-- Payment Details Section -->
        <div class="row mt-5">
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Total Earnings</h5>
                        <p class="card-text">
                            <span class="h3 font-weight-bold text-primary">₹<%= totalEarnings.toLocaleString() %></span>
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Pending Payments</h5>
                        <p class="card-text">
                            <span class="h3 font-weight-bold text-warning">₹<%= pendingPayments.toLocaleString() %></span>
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Recent Transactions</h5>
                        <div class="list-group">
                            <% recentTransactions.forEach(transaction => { %>
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="text-muted"><%= transaction.description %></span>
                                    <span class="text-primary font-weight-bold">₹<%= transaction.amount.toLocaleString() %></span>
                                </div>
                                <small class="text-muted"><%= transaction.date %></small>
                            </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="bg-light mt-5 py-3">
        <div class="container text-center">
            <span class="text-muted">© 2025 Service Sathi. All rights reserved.</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <% if (typeof window !== 'undefined') { %>
    <script src="/js/dashboard.js"></script>
    <% } %>
</body>
</html>